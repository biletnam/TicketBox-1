@model IEnumerable<TicketBox.WebUI.Models.TypeTicket>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Type Ticket";
}
<h2>Events</h2>
<p>
    @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-default" })
</p>
<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TypeTicketId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>               
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeTicketId)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>                       
            <td>
                <div class="btn-group-vertical">
                    @Html.ActionLink("Edit", "Edit", new { id = item.TypeTicketId }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Details", "Details", new { id = item.TypeTicketId }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.TypeTicketId }, new { @class = "btn btn-default" })
                </div>
            </td>
        </tr>
    }
</table>